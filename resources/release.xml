<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>release</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>sensei-core/target</directory>
			<outputDirectory>sensei-core/target</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>sensei-core/target/lib</directory>
			<outputDirectory>sensei-core/target/lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>sensei-core/src/main/webapp</directory>
			<outputDirectory>sensei-core/src/main/webapp</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>example/cars</directory>
			<outputDirectory>/example/cars</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>example/tweets</directory>
			<outputDirectory>/example/tweets</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
			<excludes>
				<exclude>target</exclude>
				<exclude>target/**/*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>example/hadoop-indexing</directory>
			<outputDirectory>/example/hadoop-indexing</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
			<excludes>
				<exclude>target</exclude>
				<exclude>target/**/*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>./</directory>
			<outputDirectory>./</outputDirectory>
			<includes>
				<include>bin/**/*</include>
				<include>resources/**/*</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly> 
